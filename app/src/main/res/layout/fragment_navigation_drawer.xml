<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/frag_navigation_drawer"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical"
              android:clickable="true"
              tools:context=".drawer.NavigationDrawerFragment">


    <RelativeLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fda612">
        <ImageView
            android:id="@+id/ProfileDP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="26dp"
            android:scaleType="centerCrop"

            android:layout_marginTop="76dp"/>
        <LinearLayout
            android:clickable="true"
            android:background="#fda612"
            android:layout_width="match_parent"
            android:layout_height="176dp"/>


        <TextView
            android:id="@+id/UserProileName"
            android:layout_marginTop="163dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#C5CAE9"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:fontFamily="sans-serif-thin"
            android:hint="UserName"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/drawerRecyclerList"
        android:layout_width="match_parent"
          android:layout_height="wrap_content"
        />
</LinearLayout>